<?xml version="1.0" encoding="UTF-8"?>

<atv>
  <head>
  </head>
  <body>
    <videoPlayer id="atvproxy_video">
      <httpLiveStreamingVideoAsset id="VIDEO_1">
        <mediaURL>{{{stream_url}}}</mediaURL>
        <myMetadata>
          <episodeId id="episode_id">{{id}}</episodeId>
          <episodeUrl id="episode_url">{{url}}</episodeUrl>
          <nextEpisode id="next_episode_url">{{next_episode_url}}</nextEpisode>
          <subtitles id="subtitles"><![CDATA[{{{subtitles}}}]]></subtitles>
        </myMetadata>
      </httpLiveStreamingVideoAsset>
    </videoPlayer>
  </body>
</atv>